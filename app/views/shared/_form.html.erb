<%= bootstrap_form_for(@restaurant) do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :address %>
  <%= f.text_field :phone_number %>
  <%= f.text_field :category %>
  <%= f.select :stars, [["1 étoile", 1], ["2 étoiles", 1], ["3 étoiles", 3], ["4 étoiles", 4], ["5 étoiles", 5]] %>
  <%= f.submit "Create Restaurant", class: "btn btn-primary" %>
<% end %>